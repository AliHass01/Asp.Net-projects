@page
@model EmplyeeManagment.Pages.EmployeeList.IndexModel

<br />

<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info text-black">Employee List</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-control text-white bg-dark border-secondary">Add Employee</a>
    </div>
    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Employees.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Employees.FirstOrDefault().Id"></label>
                        </th>
                        <th>
                            <label asp-for="Employees.FirstOrDefault().Name"></label>
                        </th>
                        <th>
                            <label asp-for="Employees.FirstOrDefault().Salary"></label>
                        </th>
                        <th>
                            <label asp-for="Employees.FirstOrDefault().Position"></label>
                        </th>
                        <th>
                        </th>
                    </tr>
                    @foreach (var item in Model.Employees)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Salary)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Position)
                            </td>
                            <td>
                                <button class="btn btn-danger btn-sm" asp-page-handler="Delete" asp-route-Id="@item.Id" onclick="return confirm('Are you sure you want to delete the record ?')">
                                    Delete
                                </button>
                                <a asp-page="Edit" asp-route-Id="@item.Id" class="btn btn-secondary btn-sm">Edit</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No Employee Data</p>
            }
        </form>
    </div>

</div>

